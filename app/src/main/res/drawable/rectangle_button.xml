<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/button_select" />
            <gradient android:angle="-90" android:startColor="@color/button_select" android:endColor="@color/button_select"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" /> <!--Higher value will round the edges of the button-->
            <stroke android:width="1dip" android:color="@color/standard_button_color" />
            <gradient android:angle="-90" android:startColor="@color/standard_button_color" android:endColor="@color/standard_button_color" />
        </shape>
    </item>
</selector>