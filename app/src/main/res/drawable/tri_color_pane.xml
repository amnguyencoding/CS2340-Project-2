<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" /> <!--Higher value will round the edges of the pane-->
            <stroke android:width="1dip" android:color="@color/pane_background" />
            <gradient
                android:angle="315"
                android:startColor="#F61067"
                android:centerColor="#5E239D"
                android:endColor="#00F0B5"/>
        </shape>
    </item>
</selector>