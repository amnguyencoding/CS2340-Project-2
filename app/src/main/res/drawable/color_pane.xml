<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" /> <!--Higher value will round the edges of the pane-->
            <stroke android:width="1dip" android:color="#F61067" />
            <!--Gradient not currently applied, but change endColor to darker if you want to apply it-->
            <gradient android:angle="-90" android:startColor="#F61067" android:endColor="#F61067" />
        </shape>
    </item>
</selector>