<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.SummaryFragment"
    android:layout_height="match_parent"
    android:background="@drawable/dark_pattern_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/summaryWrappedImage"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginLeft="91dp">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="293dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Artists:"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist1"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/roboto_mono"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist2"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/roboto_mono"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">
                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Artists"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryMinutesListened"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Genre:"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:theme="@style/autoscroll">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="293dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Top Songs:"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_mono"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_mono"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:fontFamily="@font/roboto_mono"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:fontFamily="@font/roboto_mono"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedTopGenre"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Top Genre"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:fontFamily="@font/roboto_mono"
                    android:theme="@style/autoscroll">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/summaryWrappedRestartButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_button"
                android:text="Restart"
                android:textColor="@color/white">
            </Button>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/summaryWrappedSaveButton"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/wrapped_button"
                android:text="Save"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/summaryWrappedHomeButton"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_button"
                android:text="Home"
                android:textColor="@color/white">
            </Button>

        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>