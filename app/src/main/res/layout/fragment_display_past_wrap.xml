<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.SummaryFragment"
    android:layout_height="match_parent"
    android:background="@drawable/dark_pattern_background">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="654dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/summaryWrappedImage"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginLeft="91dp"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="293dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Artists:"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll"></TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedArtist5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryMinutesListened"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto_mono"
                    android:paddingLeft="10dp"
                    android:text="Top Genre:"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:theme="@style/autoscroll">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="293dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Songs:"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedSong5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Artists"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

                <TextView
                    android:id="@+id/summaryWrappedTopGenre"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Top Genre"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:theme="@style/autoscroll">

                </TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/summaryWrappedReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/roboto_mono"
        android:text="Return To Saved Wrappeds"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>